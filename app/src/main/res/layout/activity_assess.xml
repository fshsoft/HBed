<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ppg_bg">

    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="60dp"
            android:drawableLeft="@drawable/back"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="自主神经评估"
            android:textColor="@color/barTitleColor"
            android:textSize="28sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="60dp"
            android:layout_toRightOf="@+id/back"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/assess_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/barTitleColor"
                android:textSize="24sp"
                android:text="评估ID：762" />

            <TextView
                android:id="@+id/assess_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/barTitleColor"
                android:textSize="24sp"
                android:layout_marginLeft="30dp"
                android:text="姓名：张三" />

            <TextView
                android:id="@+id/assess_hx_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:textColor="@color/barTitleColor"
                android:textSize="24sp"
                android:text="呼吸类型：缩唇呼吸" />

            <TextView
                android:id="@+id/assess_hxl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:textColor="@color/barTitleColor"
                android:textSize="24sp"
                android:text="呼吸率：自由呼吸" />

            <TextView
                android:visibility="gone"
                android:id="@+id/assess_hxb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:textColor="@color/barTitleColor"
                android:textSize="24sp"
                android:text="呼气吸气比：1:1.5" />


            <Button
                android:visibility="gone"
                android:layout_marginLeft="20dp"
                android:id="@+id/hu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="呼"/>

            <Button
                android:visibility="gone"
                android:layout_marginLeft="20dp"
                android:id="@+id/xi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="吸"/>
        </LinearLayout>



    </RelativeLayout>



    <LinearLayout
        android:id="@+id/assess_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" />




</LinearLayout>